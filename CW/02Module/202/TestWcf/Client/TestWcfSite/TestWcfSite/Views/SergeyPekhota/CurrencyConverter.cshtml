@model TestWcfSite.Models.PikhotaSerhiiModels.CurrencyConverter
@{
    ViewBag.Title = "Конвертер валют";

}

<h2>CurrencyConverter</h2>

@using (Html.BeginForm("CurrencyConverter", "SergeyPekhota", FormMethod.Post))
{
    @Html.TextBox("count")
    <select name="fromCurrency" >
        <option value="USD">USD</option>
        <option value="UAH">UAH</option>
        <option value="EUR">EUR</option>
    </select>
    @Html.Label("to")
    <select name="toCurrency">
        <option value="USD">USD</option>
        <option value="UAH">UAH</option>
        <option value="EUR">EUR</option>
    </select>
    <input type="submit" name="Change" value="Обменять" />
}

@Html.Label("Результат")
<b>@ViewBag.Result</b>

<p>@Html.Partial("_CurrencyRates")</p>