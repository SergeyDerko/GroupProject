
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @{ 
            Random r = new Random();
            for (int i = 0; i < 10; i++)
            {
                for (int j = 0; j < 10; j++)
                {
                    var a = r.Next(100);
                    var b = r.Next(100);
                    var result = a + b;
                    <p>@a + @b = @result</p>
                }
            }
        }
    </div>
</body>
</html>
